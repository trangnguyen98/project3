<div class="container pt-4">
    <h1 class="h3 mb-2 text-gray-800">Sản phẩm</h1>
    <br>
<div class="my-2 px-1">
            <div class="row">
                <div class="col-6">
                    <div>
                        <a href="./themsanpham" class="btn-primary btn-sm">
                            <i class="fas fa-plus-circle mr-1"></i>
                            Thêm sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <br>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <span class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</span>
            </div>
            <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Mô tả</th>
                <th>Loại sản phẩm</th>
                <th>Nơi sản xuất</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th></th>
            </tr>  
        </thead>
        {{#each themsanpham}}
        <tr>
            <td>
                <img style="width: 90px" src="/{{Img}}" alt="">
            </td>
            <td>
                {{Name}}
            </td>
            <td>
                {{Title}}
            </td>
            <td>
                {{Category}}
            </td>
            <td>
                {{Nation}}
            </td>
            <td>
                {{Price}}
            </td>
            <td>
                {{Quantity}}
            </td>
            <td>
                <a href="./sua/{{_id}}" class="btn btn-primary">Sửa</a>

                <a href="./xoa/{{_id}}" class="btn btn-danger">Xóa</a>
            </td>
            {{/each}}
        </tr>
    </table>
</div>