<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Thêm sản phảm mới</h1>
	<br>

	<!-- DataTales Example -->
	{{!-- <div class="card shadow mb-4"> --}}
	{{!-- <div class="card-body"> --}}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<span class="m-0 font-weight-bold text-primary">From thêm sản phẩm</span>
		</div>
		<div class="card-body">
			<form action="" method="post" enctype="multipart/form-data">
				<p>Tên: <input class="form-control" type="text" name="Name"></p>
				
				<p>Mô tả:</p>
				<input class="form-control" type="text" name="Title">
				<p>Nơi sản xuất:</p>
				<input class="form-control" type="text" name="Nation">
				<p>Giá:</p>
				<input class="form-control" type="text" name="Price">
				<p>Số lượng:</p>
				<input class="form-control" type="text" name="Quantity">
				<p>Chọn ảnh</p>
				<input type="file" name="Img">
				<br>
				<p>Loại sản phẩm: </p>
				<div class="form-group">
					<label for=""></label>
					<select class="form-control" name="Category">
						{{#each themloaisanpham}}
						<option>
							{{Name}}
						</option>
						{{/each}}
					</select>
				</div>
				
				<button class="btn btn-primary mt-5">Thêm</button>
			</form>
		</div>
	</div>
</div>