<div class="container pt-4">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Loại sản phẩm</h1>
    <br>
    <div class="my-2 px-1">
        <div class="row">
            <div class="col-6">
                <div>
                    <a href="./themloaisanpham" class="btn-primary btn-sm">
                        <i class="fas fa-plus-circle mr-1"></i>
                        Thêm loại sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
    <br>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <span class="m-0 font-weight-bold text-primary">Danh sách loại sản phẩm</span>
        </div>
        <div class="card-body">
            
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    {{#each themloaisanpham}}
                    <tr>
                        <td>
                            {{Name}}
                        </td>
                        <td>
                            <a href="./loaisanpham/xoa/{{_id}}", class="btn btn-danger">Xoá</a> 
                        </td>
                        {{/each}}
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>